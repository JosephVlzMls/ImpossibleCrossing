DRAW_PIXEL MACRO ARG0, ARG1, ARG2
    PUSH AX
    PUSH BX
    PUSH CX
    PUSH DX
    MOV AH, 0Ch
    MOV AL, ARG2
    MOV BH, 0h
    MOV CX, ARG0
    MOV DX, ARG1
    INT 10h
    POP DX
    POP CX
    POP BX
    POP AX
ENDM

DRAW_HLINE MACRO ARG0, ARG1, ARG2, ARG3
    LOCAL TAG0, TAG1
    PUSH AX
    PUSH CX
    MOV AX, ARG0
    ADD AX, ARG2
    MOV CX, ARG0
    TAG0:
    DRAW_PIXEL CX, ARG1, ARG3
    ADD CX, 1h
    CMP CX, AX
    JGE TAG1
    JMP TAG0
    TAG1:
    POP CX
    POP AX
ENDM

DRAW_VLINE MACRO ARG0, ARG1, ARG2, ARG3
    LOCAL TAG0, TAG1
    PUSH AX
    PUSH DX
    MOV AX, ARG1
    ADD AX, ARG2
    MOV DX, ARG1
    TAG0:
    DRAW_PIXEL ARG0, DX, ARG3
    ADD DX, 1h
    CMP DX, AX
    JGE TAG1
    JMP TAG0
    TAG1:
    POP DX
    POP AX
ENDM

DRAW_SOLID_RECTANGLE MACRO ARG0, ARG1, ARG2, ARG3, ARG4
    LOCAL TAG0, TAG1
    PUSH AX
    PUSH DX
    MOV AX, ARG1
    ADD AX, ARG3
    MOV DX, ARG1
    TAG0:
    DRAW_HLINE ARG0, DX, ARG2, ARG4
    ADD DX, 1h
    CMP DX, AX
    JGE TAG1
    JMP TAG0
    TAG1:
    POP DX
    POP AX
ENDM

DRAW_HOLLOW_RECTANGLE MACRO ARG0, ARG1, ARG2, ARG3, ARG4, ARG5
    PUSH CX
    DRAW_SOLID_RECTANGLE ARG0, ARG1, ARG2, ARG4, ARG5
    DRAW_SOLID_RECTANGLE ARG0, ARG1, ARG4, ARG3, ARG5
    MOV CX, ARG0
    ADD CX, ARG2
    SUB CX, ARG4
    DRAW_SOLID_RECTANGLE CX, ARG1, ARG4, ARG3, ARG5
    MOV CX, ARG1
    ADD CX, ARG3
    SUB CX, ARG4
    DRAW_SOLID_RECTANGLE ARG0, CX, ARG2, ARG4, ARG5
    POP CX
ENDM