PLAYER STRUC
    PLY_X DW 0h
    PLY_Y DW 0h
PLAYER ENDS

SHOW_PLAYER MACRO ARG0
    PUSH BX
    PUSH CX
    MOV BX, ARG0.PLY_X
    ADD BX, 2
    DRAW_SOLID_RECTANGLE BX, ARG0.PLY_Y, 6, 4, 15
    MOV CX, ARG0.PLY_Y
    ADD CX, 4
    DRAW_SOLID_RECTANGLE ARG0.PLY_X, CX, 10, 5, 8
    ADD CX, 5
    SUB BX, 1
    DRAW_SOLID_RECTANGLE BX, CX, 8, 6, 8
    ADD BX, 7
    DRAW_SOLID_RECTANGLE ARG0.PLY_X, CX, 2, 2, 15
    DRAW_SOLID_RECTANGLE BX, CX, 2, 2, 15
    POP CX
    POP BX
ENDM

DELETE_PLAYER MACRO ARG0
    PUSH BX
    PUSH CX
    MOV BX, ARG0.PLY_X
    ADD BX, 2
    DRAW_SOLID_RECTANGLE BX, ARG0.PLY_Y, 6, 4, 0
    MOV CX, ARG0.PLY_Y
    ADD CX, 4
    DRAW_SOLID_RECTANGLE ARG0.PLY_X, CX, 10, 5, 0
    ADD CX, 5
    SUB BX, 1
    DRAW_SOLID_RECTANGLE BX, CX, 8, 6, 0
    ADD BX, 7
    DRAW_SOLID_RECTANGLE ARG0.PLY_X, CX, 2, 2, 0
    DRAW_SOLID_RECTANGLE BX, CX, 2, 2, 0
    POP CX
    POP BX
ENDM

MOVE_PLAYER MACRO ARG0, ARG1, ARG2
    PUSH CX
    PUSH DX
    DELETE_PLAYER ARG0
    MOV CX, ARG1
    MOV DX, ARG2
    MOV ARG0.PLY_X, CX
    MOV ARG0.PLY_Y, DX
    SHOW_PLAYER ARG0
    POP DX
    POP CX    
ENDM

MOVE_UP_PLAYER MACRO ARG0, ARG1
    PUSH AX
    MOV AX, ARG0.PLY_Y
    SUB AX, ARG1
    MOVE_PLAYER ARG0, ARG0.PLY_X, AX
    POP AX
ENDM

MOVE_DOWN_PLAYER MACRO ARG0, ARG1
    PUSH AX
    MOV AX, ARG0.PLY_Y
    ADD AX, ARG1
    MOVE_PLAYER ARG0, ARG0.PLY_X, AX
    POP AX
ENDM

MOVE_LEFT_PLAYER MACRO ARG0, ARG1
    PUSH AX
    MOV AX, ARG0.PLY_X
    SUB AX, ARG1
    MOVE_PLAYER ARG0, AX, ARG0.PLY_Y
    POP AX
ENDM

MOVE_RIGHT_PLAYER MACRO ARG0, ARG1
    PUSH AX
    MOV AX, ARG0.PLY_X
    ADD AX, ARG1
    MOVE_PLAYER ARG0, AX, ARG0.PLY_Y
    POP AX
ENDM