SELECTOR STRUC
    SLC_X DW 0h
    SLC_Y DW 0h
    SLC_LONG DW 0h
    SLC_HEIGHT DW 0h
    SLC_THICK DW 0h
    SLC_COLOR DB 0h
    SLC_VALUE DB 0h
SELECTOR ENDS

SHOW_SELECTOR MACRO ARG0
    DRAW_HOLLOW_RECTANGLE ARG0.SLC_X, ARG0.SLC_Y, ARG0.SLC_LONG, ARG0.SLC_HEIGHT, ARG0.SLC_THICK, ARG0.SLC_COLOR
ENDM

DELETE_SELECTOR MACRO ARG0
    DRAW_HOLLOW_RECTANGLE ARG0.SLC_X, ARG0.SLC_Y, ARG0.SLC_LONG, ARG0.SLC_HEIGHT, ARG0.SLC_THICK, 0h
ENDM

MOVE_SELECTOR MACRO ARG0, ARG1, ARG2
    PUSH CX
    PUSH DX
    DELETE_SELECTOR ARG0
    MOV CX, ARG1
    MOV DX, ARG2
    MOV ARG0.SLC_X, CX
    MOV ARG0.SLC_Y, DX
    SHOW_SELECTOR ARG0
    POP DX
    POP CX
ENDM

MOVE_UP_SELECTOR MACRO ARG0, ARG1
    PUSH AX
    MOV AX, ARG0.SLC_Y
    SUB AX, ARG1
    MOVE_SELECTOR ARG0, ARG0.SLC_X, AX
    SUB_VALUE_SELECTOR ARG0
    POP AX
ENDM

MOVE_DOWN_SELECTOR MACRO ARG0, ARG1
    PUSH AX
    MOV AX, ARG0.SLC_Y
    ADD AX, ARG1
    MOVE_SELECTOR ARG0, ARG0.SLC_X, AX
    ADD_VALUE_SELECTOR ARG0
    POP AX
ENDM

ADD_VALUE_SELECTOR MACRO ARG0
    PUSH AX
    MOV AH, ARG0.SLC_VALUE
    ADD AH, 1h
    MOV ARG0.SLC_VALUE, AH
    POP AX
ENDM

SUB_VALUE_SELECTOR MACRO ARG0
    PUSH AX
    MOV AH, ARG0.SLC_VALUE
    SUB AH, 1h
    MOV ARG0.SLC_VALUE, AH
    POP AX
ENDM